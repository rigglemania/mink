{
    "rules": {
        // typescript specific
        "adjacent-overload-signatures": true,
        "member-access": [true, "check-accessor", "check-constructor"],
        "member-ordering": [true, "statics-first"],
        "no-empty-interface": true,
        "no-inferrable-types": [true],
        "no-internal-module": true,
        "no-magic-numbers": [true, -1, 0, 1],
        "no-namespace": [true, "allow-declarations"],
        "no-reference": true,
        "no-var-requires": false,
        "only-arrow-functions": [true, "allow-declarations"],
        "prefer-for-of": true,
        "typedef-whitespace": [true, {
            "call-signature": "nospace",
            "index-signature": "nospace",
            "parameter": "nospace",
            "property-declaration": "nospace",
            "variable-declaration": "nospace"
        }, {
            "call-signature": "onespace",
            "index-signature": "onespace",
            "parameter": "onespace",
            "property-declaration": "onespace",
            "variable-declaration": "onespace"
        }],

        // functionality
        "curly": true,
        "forin": true,
        "label-position": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-construct": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-invalid-this": [true, "check-function-in-method"],
        "no-null-keyword": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-unused-new": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "radix": true,
        "switch-default": true,
        "triple-equals": [true],
        "use-isnan": true,

        // maintainability
        "eofline": true,
        "indent": [true, "spaces"],
        "linebreak-style": [true, "LF"],
        "no-trailing-whitespace": true,
        "prefer-const": true,
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],

        // style
        "align": ["parameters", "arguments", "statements"],
        "array-type": [true, "array"],
        "arrow-parens": true,
        "callable-types": true,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "interface-name": [true, "never-prefix"],
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-consecutive-blank-lines": [true, 2],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": true,    
        "one-line": [true, "check-catch", "check-else", "check-finally", "check-open-brace", "check-whitespace"],
        "one-variable-per-declaration": [true],
        "quotemark": [true, "double", "avoid-escape"],
        "semicolon": [true, "always"],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast"
        ]
    }
}